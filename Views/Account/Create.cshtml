@{
}

@model Crash

<h2>Add Crash Record</h2>

<form method="post">
    <div asp-validation-summary="All"></div>

    <input hidden asp-for="CRASH_PK" />

    <label asp-for="CRASH_ID">Crash ID: </label>
    <input asp-for="CRASH_ID" /><br />

    <label asp-for="CRASH_DATETIME">Date and Time: </label>
    <input type="datetime-local" asp-for="CRASH_DATETIME" /><br />

    <label asp-for="ROUTE">Route: </label>
    <input asp-for="ROUTE" /><br />

    <label asp-for="MILEPOINT">Milepoint: </label>
    <input asp-for="MILEPOINT" /><br />

    <label asp-for="LAT_UTM_Y">Latitude: </label>
    <input asp-for="LAT_UTM_Y" /><br />

    <label asp-for="LONG_UTM_X">Longitude: </label>
    <input asp-for="LONG_UTM_X" /><br />

    <label asp-for="MAIN_ROAD_NAME">Road: </label>
    <input asp-for="MAIN_ROAD_NAME" /><br />

    <label asp-for="CityId">City: </label>
    <select asp-for="CityId">
        @foreach (City c in ViewBag.Cities)
        {
            <option value="@c.CITY_ID">@c.CITY_NAME</option>
        }
    </select><br />

    <label asp-for="CountyId">County: </label>
    <select asp-for="CountyId">
        @foreach (County c in ViewBag.Counties)
        {
            <option value="@c.COUNTY_ID">@c.COUNTY_NAME</option>
        }
    </select><br />

    <label asp-for="SeverityId">Severity: </label>
    <select asp-for="SeverityId">
        @foreach (Severity s in ViewBag.Severities)
        {
            <option value="@s.SEVERITY_ID">@s.SEVERITY_DESCRIPTION</option>
        }
    </select><br />

    <label asp-for="WORK_ZONE_RELATED">Work Zone Related: </label>
    <input type="checkbox" id="WORK_ZONE_RELATED" /><br />

    <label asp-for="PEDESTRIAN_INVOLVED">Pedestrian Involved: </label>
    <input type="checkbox" id="PEDESTRIAN_INVOLVED" /><br />

    <label asp-for="BICYCLIST_INVOLVED">Bicycle Involved: </label>
    <input type="checkbox" id="BICYCLIST_INVOLVED" /><br />

    <label asp-for="MOTORCYCLE_INVOLVED">Motorcycle Involved: </label>
    <input type="checkbox" id="MOTORCYCLE_INVOLVED" /><br />

    <label asp-for="IMPROPER_RESTRAINT">Improper Restraint: </label>
    <input type="checkbox" id="IMPROPER_RESTRAINT" /><br />

    <label asp-for="UNRESTRAINED">Unrestrained: </label>
    <input type="checkbox" id="UNRESTRAINED" /><br />

    <label asp-for="DUI">DUI: </label>
    <input type="checkbox" id="DUI" /><br />

    <label asp-for="INTERSECTION_RELATED">Intersection Related: </label>
    <input type="checkbox" id="INTERSECTION_RELATED" /><br />

    <label asp-for="WILD_ANIMAL_RELATED">Wild Animal Related: </label>
    <input type="checkbox" id="WILD_ANIMAL_RELATED" /><br />

    <label asp-for="DOMESTIC_ANIMAL_RELATED">Domestic Animal Related: </label>
    <input type="checkbox" id="DOMESTIC_ANIMAL_RELATED" /><br />

    <label asp-for="OVERTURN_ROLLOVER">Overturn Rollover: </label>
    <input type="checkbox" id="OVERTURN_ROLLOVER" /><br />

    <label asp-for="COMMERCIAL_MOTOR_VEH_INVOLVED">Commercial Vehicle Involved: </label>
    <input type="checkbox" id="COMMERCIAL_MOTOR_VEH_INVOLVED" /><br />

    <label asp-for="TEENAGE_DRIVER_INVOLVED">Teenage Driver Involved: </label>
    <input type="checkbox" id="TEENAGE_DRIVER_INVOLVED" /><br />

    <label asp-for="OLDER_DRIVER_INVOLVED ">Older Driver Involved: </label>
    <input type="checkbox" id="OLDER_DRIVER_INVOLVED" /><br />

    <label asp-for="NIGHT_DARK_CONDITION">Night/Dark Condition: </label>
    <input type="checkbox" id="NIGHT_DARK_CONDITION" /><br />

    <label asp-for="SINGLE_VEHICLE">Single Vehicle: </label>
    <input type="checkbox" id="SINGLE_VEHICLE" /><br />

    <label asp-for="DISTRACTED_DRIVING">Distracted Driving: </label>
    <input type="checkbox" id="DISTRACTED_DRIVING" /><br />

    <label asp-for="DROWSY_DRIVING">Drowsy Driving: </label>
    <input type="checkbox" id="DROWSY_DRIVING" /><br />

    <label asp-for="ROADWAY_DEPARTURE">Roadway Departure: </label>
    <input type="checkbox" id="ROADWAY_DEPARTURE" /><br />

    <button type="submit" class="btn btn-primary">Submit</button>
</form>